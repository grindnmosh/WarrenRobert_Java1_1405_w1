<!-- This layout is for a custom adapter to be used in a later class -->
<RelativeLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:android="http://schemas.android.com/apk/res/android">

    <!-- define the image view layout where the image will appear -->
    <ImageView
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:id="@+id/imageView"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:src="@drawable/tempimage"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="10dp" />

    <!-- define the text view layout where the feed post will appear -->
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="10dp"
        android:text="Large Text"
        android:id="@+id/textView"
        android:layout_toRightOf="@+id/imageView"/>

    <!-- define the text view layout where the date will appear -->
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:layout_marginLeft="10dp"
        android:text="Medium Text"
        android:id="@+id/textView2"
        android:layout_alignBottom="@+id/imageView"
        android:layout_marginBottom="10dp"
        android:layout_toRightOf="@+id/imageView" />
</RelativeLayout>